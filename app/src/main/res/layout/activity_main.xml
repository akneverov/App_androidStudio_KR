<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1DDE8"
    tools:layout_gravity="center">


    <TextView
        android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"

        android:layout_marginTop="10dp"
        android:text="@string/mainText"
        android:textColor="@color/purple_700"
        android:textSize="19sp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="79dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/mark4" />

    <TextView
        android:id="@+id/mTxt"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:text="Для прохождения теста необходимо иметь возможность лечь на 5 минут.Время проведения теста около 10-15 минут."
        android:textColor="@color/black"
        android:textSize="15dp"

        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="200dp"
        android:text="    1.Необходимо лечь и лежать 5 минут. "
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:layout_width="277dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="230dp"
        android:text="    2.Посчитать пульс в течении 3 минут."
        android:textColor="@color/black"
        android:textSize="14sp" />


    <TextView
        android:layout_width="2000dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="150dp"
        android:text="     Дата рождения(д,мес,гг): "
        android:textColor="@color/black"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="170dp"
        android:entries='@array/numbers' />

    <Spinner
        android:id="@+id/spin"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="170dp"
        android:entries="@array/month" />

    <Spinner
        android:id="@+id/spinYer"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="170dp"
        android:entries="@array/years" />

    <TextView
        android:layout_width="277dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="260dp"
        android:text="    3.Введите пуль в положении лёжа: "
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:layout_width="342dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="290dp"
        android:text="    4.Встать и стоять без движений 5 минут."
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:layout_width="277dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="320dp"
        android:text="    5.Посчитать пульс в течении минуты."
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:layout_width="277dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="350dp"
        android:text="    6.Введите пуль в положении стоя:"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="330dp"
        android:textSize="20sp" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="240dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="277dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="380dp"
        android:text='    7.Нажмите "Узнать результат".'
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="270dp"
        android:text="@string/nextButton"
        android:textSize="20sp"
        />


</FrameLayout>